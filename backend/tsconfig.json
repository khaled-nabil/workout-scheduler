{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "outDir": "build",
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
